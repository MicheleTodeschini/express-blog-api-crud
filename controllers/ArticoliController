
const articoliRicette = require('../data/ArticoliRicette')
const posts = require('../routers/posts')

const index = (req, res) => {

    res.json(articoliRicette)
}

const show = (req, res) => {
    const id = Number(req.params.id)

    //const foundArticolo = articoliRicette.find(articolo => articolo.id === id)


    let foundArticolo = []

    for (let i = 0; i < articoliRicette.length; i++) {
        if (articoliRicette.id === id) {
            foundArticolo.push(articoliRicette[i])
            return foundArticolo
        }

    }

    res.json(foundArticolo)
    console.log(foundArticolo);


}

const store = (req, res) => {
    res.send('Store a new post here')
}

const update = (req, res) => {
    res.send(`Update the post with id: ${req.params.id}`)
}

const modify = (req, res) => {
    res.send(`modify the post with id: ${req.params.id}`)
}

const destroy = (req, res) => {
    res.send(`Delete the post with id: ${req.params.id}`)
}

module.exports = {
    index,
    show,
    store,
    update,
    modify,
    destroy
}